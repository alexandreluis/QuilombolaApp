<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_abril"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewAbril"
                android:layout_below="@+id/textViewMarco21"
                android:src="@drawable/mes_abril"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0sp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="center" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewAbril01"
                android:layout_below="@+id/imageViewAbril"
                android:text="@string/textoAbril01"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewAbril04"
                android:layout_below="@+id/textViewAbril01"
                android:text="@string/textoAbril04"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewAbril05"
                android:layout_below="@+id/textViewAbril04"
                android:text="@string/textoAbril05"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewAbril25"
                android:layout_below="@+id/textViewAbril05"
                android:text="@string/textoAbril25"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewAbril26"
                android:layout_below="@+id/textViewAbril25"
                android:text="@string/textoAbril26"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>