<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_entrevistas"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--entrevistas-->
            <TextView
                android:id="@+id/textView10"
                android:text="@string/titulo_video_quilopoa03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginTop="21dp" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textView11"
                android:text="@string/video_quilopoa03"
                android:layout_below="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="21sp"
                android:layout_marginTop="21dp"
                android:layout_alignParentStart="true"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textView12"
                android:text="@string/titulo_video_quilopoa04"
                android:layout_below="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textView13"
                android:text="@string/video_quilopoa04"
                android:layout_below="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="21sp"
                android:layout_marginTop="21dp"
                android:layout_alignParentStart="true"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
